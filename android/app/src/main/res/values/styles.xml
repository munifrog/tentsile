<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar.TextTitle.Light" parent="TextAppearance.AppCompat.Widget.ActionBar.Title" >
        <item name="android:textSize">@dimen/text_toolbar</item>
        <item name="android:textColor">@color/colorTextTitle</item>
    </style>

    <style name="Toolbar.MainTheme.Light" parent="ThemeOverlay.AppCompat.ActionBar" >
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorTextTitle</item>
        <item name="popupTheme">@style/Toolbar.PopupTheme.Light</item>
    </style>

    <style name="Toolbar.PopupTheme.Light" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:textSize">@dimen/text_toolbar_menu</item>
        <item name="android:textColor">@color/colorTextMenu</item>
        <item name="android:background">@color/colorBackMenu</item>
    </style>

    <style name="FAQ_Question" >
        <item name="android:background">@color/colorBackButton</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/colorTextButton</item>
        <item name="android:textSize">@dimen/text_faq_question</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FAQ_Answer" >
        <item name="android:gravity">start</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">@dimen/text_faq_answer</item>
    </style>

</resources>